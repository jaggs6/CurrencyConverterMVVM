<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ListItemTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/list_item_subtitle_size</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>
</resources>